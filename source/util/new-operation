HACKMODE_BASE="$HOME/Documents/hackmode/"

if [[ -f "$HOME/.config/hackmode/hackmoderc" ]]; then
    source "$HOME/.config/hackmode/hackmoderc"
fi
dir="$HACKMODE_BASE/$1"
mkdir -p "$dir"
mkdir -p "$dir/findings"
mkdir -p "$dir/.config/"
mkdir -p "$dir/scans/"
mkdir -p "$dir/exploits/"
mkdir -p "$dir/files/"
mkdir -p "$dir/archives/"

echo "HACKMODE_OP=$1; HACKMODE_PATH=$dir; use nix" > $dir/.envrc
touch "$dir/operation.org"
git init "$dir"
git -C "$dir" add "$dir"
